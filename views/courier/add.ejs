<div class="card" style="width:30%; margin:auto; margin-top:50px">
    <h3 class="m-4">Add New</h3>
    <hr style="width:90%; margin:auto">
    </hr>
    <div class="card-body card-primary">
        <form action="/courier/add" method="POST">
            <input type="hidden" name="user_id" value="<%=locals.user._id%>">
            <div class="form-group">
                <label htmlFor="name">Item Name</label>
                <input type="text" name="name" id="name" class="form-control" />
            </div>
            <div class="form-group">
                <label htmlFor="type">Item Type</label>
                <input type="text" name="type" id="type" class="form-control" />
            </div>
            <div class="form-group">
                <label htmlFor="des">Description</label>
                <textarea id="des" name="description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label htmlFor="size">Item Size</label>
                <div class="row">
                    <div class="col">
                        <input type="text" name="itemHeight" id="size" class="form-control" />
                    </div>
                    &#215;
                    <div class="col">
                        <input type="text" name="itemWidth" id="size" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label htmlFor="weight">Item Weight(gm.)</label>
                <input type="number" name="weight" id="weight" class="form-control" />
            </div>
            <div class="form-group">
                <label htmlFor="from">From</label>
                <input type="text" id="from" name="from" class="form-control" />
            </div>
            <div class="form-group">
                <label htmlFor="to">To</label>
                <div class="card">
                    <div class="card-body">

                        <div class="form-group">
                            <label htmlFor="toName">Name</label>
                            <input type="text" name="toName" id="toName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label htmlFor="toMobile">Mobile No.</label>
                            <input type="text" name="toMobile" id="toMobile" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label htmlFor="toAddresss">Address</label>
                            <textarea id="toAddress" name="toAddress" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>